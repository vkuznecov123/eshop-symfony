{# Шаблон вывода подробного описания товара #}

<div class="row" id="goodRow">
    <div class="col-md-8 col-md-offset-2 col-sm-offset-1 col-sm-10 col-xs-12 goodContainer text-center">

        <h1>{{ goodFull['name'] }}</h1>
        <img src="{{ goodFull['image'] }}" alt="Изображение недоступно">
        <table class="table table-striped table-bordered"> <!-- Таблица с основными характеристиками -->
            <tr>
                <td>Цена</td>
                <td>{{ goodFull['price'] }} Р</td>
            </tr>
            <tr>
                <td>Производитель</td>
                <td>{{ goodFull['manufacturer'] }}</td>
            </tr>
            <tr>
                <td>В наличии</td>
                <td>{{ goodFull['number'] }} шт.</td>
            </tr>

        </table>

        <h4>Характеристики:</h4>

        <table class="table table-striped table-bordered"> <!-- Таблица с дополнительными характеристиками -->
            {% for el in goodFull['chars'] %}
                <tr>
                    <td>{{ el['name'] }}</td>
                    <td>{{ el['value'] }}</td>
                </tr>
            {% endfor %}
        </table>

    </div>
</div>